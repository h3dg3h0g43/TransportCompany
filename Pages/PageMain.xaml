<Page x:Class="TransportComp.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TransportComp.Pages"
      mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button x:Name="BtnAddTruck" Click="BtnAddTruck_OnClick" Content="Добавить грузовик"
                        Style="{StaticResource mainBtn}" />
                <Button x:Name="BtnAddDepot" Click="BtnAddDepot_OnClick" Content="Добавить депо"
                        Style="{StaticResource mainBtn}" />
                <Button x:Name="BtnTrucks" Click="BtnTrucks_OnClick" Content="Грузовики" Style="{StaticResource mainBtn}" />
                <Button x:Name="BtnStatus" Click="BtnStatus_OnClick" Content="Статус" Style="{StaticResource mainBtn}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button x:Name="BtnAddDriver" Click="BtnAddDriver_Click" Content="Добавить водителя"
                        Style="{StaticResource mainBtn}" />
                <Button x:Name="BtnDepots" Click="BtnDepots_Click" Content="Список депо"
                        Style="{StaticResource mainBtn}" />
                <Button x:Name="BtnDrivers" Click="BtnDrivers_Click" Content="Водители" Style="{StaticResource mainBtn}" />
                <Button x:Name="BtnRoutes" Click="BtnPartnership_OnClick" Content="Маршруты"
                        Style="{StaticResource mainBtn}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>